<h4>Marlin EEPROM Editor</h4>

<form class="form-horizontal" onsubmit="return false;">
    <div class="control-group">
        <label for="eeprom_m503" class="control-label">{{ _('Use M503') }}</label>
        <div class="controls">
            <input id="eeprom_m503" type="checkbox" class="inline" data-bind="checked: settings.plugins.eeprom_marlin.use_m503">
            <p class="help-block">
                If disabled, the plugin will fall back on M501.
            </p>
        </div>

    </div>
    <br>
    <div class="control-group">
        <label for="backup_name" class="control-label">{{ _("Use custom backup names") }}</label>
        <div class="controls">
            <input id="backup_name" type="checkbox" class="inline" data-bind="checked: settings.plugins.eeprom_marlin.custom_name">
            <p class="help-block">
                If enabled, a popup box will be shown to allow you to name the backup. Otherwise auto-generated.
            </p>
        </div>
    </div>
</form>

